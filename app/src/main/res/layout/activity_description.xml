<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/description_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top" />

            <ImageView
                android:id="@+id/food_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/description_image"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/linear_action" />

            <TextView
                android:id="@+id/food_action_percent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/food_action"
                android:layout_alignTop="@id/food_action"
                android:gravity="center"
                android:text="%"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/foodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:gravity="bottom"
            android:text="sampleName"
            android:textColor="#414141"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_image" />

        <TextView
            android:id="@+id/foodPrice"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="top|left"
            android:text="samplePrice"
            android:textColor="#414141"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foodName" />

        <TextView
            android:id="@+id/foodDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="top|left"
            android:text="Здесь должно находиться очень много-много текста, который якобы с трудом будет влезать на этом маленьком экране моего не менее маленького смартфона."
            android:textColor="#8A8A8A"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/foodProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="top|left"
            android:text="АВЫАВЫАОРВЫАОВЫР"
            android:textColor="#8A8A8A"
            android:textSize="15dp" />

        <Button
            android:id="@+id/addToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/rounded_button"
            android:text="Добавить в корзину"
            android:textColor="@color/colorItemname"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/count_control_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center|end"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/layout_bg"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageButton
                android:id="@+id/button_remove"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".30"
                android:background="@android:color/darker_gray"
                android:src="@drawable/ic_remove_button" />

            <TextView
                android:id="@+id/cartFoodCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".30"
                android:gravity="center"
                android:text="1"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/button_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".30"
                android:background="@android:color/darker_gray"
                android:src="@drawable/ic_add_button" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>